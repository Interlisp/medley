          (CL:FORMAT S "    function uponelick(){~%%")
          (CL:FORMAT S "        var newLoc = location.href.replace(/\/index.html$/i, %"%");~%%")
          (CL:FORMAT S "        location = newLoc.replace(/\/[^\/]+\/?$/, %"%");~%%")
          (CL:FORMAT S "     }~%%")
