    [OR BASE (SETQ BASE (TRUEFILENAME (MEDLEYDIR]
    (OR (DIRECTORYNAMEP BASE)
        (ERROR BASE "not a directory name"))
    (OR (AND (NUMBERP LEVEL)
             (IGREATERP LEVEL 0))
        (SETQ LEVEL 1))
    (OR ROOT.NAME (SETQ ROOT.NAME 'MEDLEY))
