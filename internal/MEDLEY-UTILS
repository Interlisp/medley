          (DEST (PACKFILENAME 'NAME "index" 'EXTENSION "html" 'VERSION NIL 'BODY BASE))
          (PSEUDOHOST (EQ (NTHCHAR BASE (CL:1- 0))
                          '}))
          SLASHED SHORTNAME)
