             (SETQ FILE NIL))
         (TTEST FILE)
         (CL:WHEN SCROLL
             (SCROLLW (WFROMDS (TEXTSTREAM (GTO)))
                    0 SCROLL))
         (SETQ LPC (\TEDIT.CHTOPC (GETLD (GETLD (PANEPREFIX (\TEDIT.PRIMARYPANE (GTO)))
                                                NEXTLINE)
                                         LCHAR1)
                          (GTO)))
         (SP LPC)
         (SPLINES])

