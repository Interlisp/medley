         (if OFILE
             then (CL:WHEN (MEMB OFILE '(T TEDIT))
                      (SETQ WTYPE 'SL)
                      (SETQ OFILE NIL))
           elseif (MEMB LASTLINE '(T TEDIT))
             then (SETQ WTYPE 'SL)
                  (SETQ LASTLINE NIL)
