        (for L NEXT inlines LINE1 while (SETQ NEXT (GETLD L NEXTLINE))
           do (CL:UNLESS (IEQP (GETLD L LCHARLIM L)
                               (GETLD NEXT LCHAR1))
                  (CL:WHEN MSG (PRINTOUT T "Line sequence error: " MSG T))
                  (HELP L NEXT))
              (CL:WHEN (AND LINEN (EQ L LINEN))
                     (RETURN))))])

