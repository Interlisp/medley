        (SETQ PIECES (\TEDIT.FIRSTPIECE (GTO PIECES))))
    (if (NULL N)
        then (SETQ N 1)
      elseif (ILESSP N 0)
        then (SETQ N (IPLUS (NPIECES PIECES)
                            N 1)))
