              then (PRINTOUT T .FR 20 CHAR " " (CHARACTER CHAR)
                          " " CHARW T)
            elseif CHAR
              then (PRINTOUT T " " CHAR " " CHARW T)
            else (PRINTOUT T .FR 20 CHAR " " " " " " CHARW T])

