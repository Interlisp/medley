        (STOP 'STOP)
        (MOVENODE (EDITMOVENODE GRAPHWINDOW))
        (ADDNODE (EDITADDNODE GRAPHWINDOW))
        (DELETENODE (EDITDELETENODE GRAPHWINDOW))
