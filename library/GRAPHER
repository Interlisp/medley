(GRAPHDELETELINK
  [LAMBDA (FROM TO GRAPH WINDOW)              (* ; "Edited 29-Apr-94 14:00 by sybalsky")
                                                             (* deletes a link from a graph)

         (* * rht 4/4/85%: Changed to call REMOVETONODES to remove either nodeID or 
       paramlist thingie for nodeID.)

    (PROG ((DELFN (fetch (GRAPH GRAPH.DELETELINKFN) of GRAPH)))
          (AND DELFN (APPLY* DELFN FROM TO GRAPH WINDOW)))
    (replace (GRAPHNODE TONODES) of FROM with (REMOVETONODES (fetch (GRAPHNODE
                                                                                         NODEID)
                                                                                of TO)
                                                                 (fetch (GRAPHNODE TONODES)
                                                                    of FROM)))
    (replace (GRAPHNODE FROMNODES) of TO with (REMOVE (fetch (GRAPHNODE NODEID)
                                                                     of FROM)
                                                                 (fetch (GRAPHNODE FROMNODES)
                                                                    of TO])

