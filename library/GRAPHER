(COPYGRAPH
  [LAMBDA (GRAPH)                                     (* ; "Edited 29-Apr-94 14:02 by sybalsky")
    (create GRAPH using GRAPH GRAPHNODES _
                            (for N L in (fetch (GRAPH GRAPHNODES) of GRAPH)
                               collect (create GRAPHNODE
                                              using N NODEPOSITION _ (create POSITION
                                                                            using
                                                                            (fetch (GRAPHNODE
                                                                                        NODEPOSITION)
                                                                               of N))
                                                    NODELABEL _
                                                    (CL:TYPECASE (SETQ L (fetch (GRAPHNODE 
                                                                                           NODELABEL)
                                                                            of N))
                                                        (BITMAP (BITMAPCOPY L))
                                                        (IMAGEOBJ (APPLY* (IMAGEOBJPROP L
                                                                                 'COPYFN)
                                                                         L))
                                                        (T L))])

(DUMPGRAPH
  [LAMBDA (GRAPH STREAM)                              (* ; "Edited 29-Apr-94 14:02 by sybalsky")
                                                             (* Put a description of a graph into 
                                                           a file.)
    (RESETLST
        (RESETSAVE (SETREADTABLE FILERDTBL))
        (PROG (BORDERS FONTS IDS SHADES (%#BORDERS 0)
                     (%#FONTS 0)
                     (%#SHADES 0)
                     (%#IDS 0))
              (printout STREAM "(" T "FIELDS (")
              (if (fetch (GRAPH SIDESFLG) of GRAPH)
                  then (printout STREAM 2 "SIDESFLG " .P2 (fetch (GRAPH SIDESFLG)
                                                                 of GRAPH)))
