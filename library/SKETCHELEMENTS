                      ((NULL (SETQ X (fetch (WIRE LATLONKNOTS) of INDVELT)))
          
          (* doesn't have a first knot, give it one at 0 . 0)

                       (replace (WIRE LATLONKNOTS) of INDVELT with (LIST '(0 . 0) NEWPOSITION)))
