                                    (PTPLUS RADIUSPT (CONSTANT (create POSITION
                                                                      XCOORD _ 1
                                                                      YCOORD _ 0]
                                   (T (PTPLUS RADIUSPT
                                             (CONSTANT (create POSITION
                                                              XCOORD _ -1
                                                              YCOORD _ 0]
                                NIL)
                     T BRUSH DASHING WINDOW))
