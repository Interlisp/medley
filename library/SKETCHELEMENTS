             ((SETQ WHERE (STRPOS "
" STR (ADD1 WHERE)))
              [SETQ STRLST (NCONC1 STRLST (COND
                                             ((EQ WHERE (ADD1 PREV))
                                              "")
                                             (T (SUBSTRING STR (ADD1 PREV)
                                                       (SUB1 WHERE]
              (SETQ PREV WHERE)
              (GO LP)))
