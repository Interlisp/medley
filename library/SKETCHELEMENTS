    (PROG ((INDVELT (fetch (GLOBALPART INDIVIDUALGLOBALPART) of GELT))
           X)
          (SELECTQ (CAR INDVELT)
              (CIRCLE (replace (CIRCLE RADIUSLATLON) of INDVELT with NEWPOSITION)
                      (SK.UPDATE.CIRCLE.AFTER.CHANGE GELT))
