       ((OR (GEQ ANGLE 360.0)
            (LEQ ANGLE -360.0))                              (* T denotes all the way around.)
        T)
       (T (PROG ((RADIUS (DISTANCEBETWEEN CENTERPT RADPT))
                 (DELTA (PLUS (SK.COMPUTE.SLOPE.OF.LINE CENTERPT RADPT)
                              ANGLE)))
