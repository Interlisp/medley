          (COND
             ((SETQ NEWGLOBAL (SK.TRANSFORM.ELEMENT (SETQ OLDGLOBAL (fetch (SCREENELT GLOBALPART)
                                                                       of SELELT))
                                     TRANSFORMFN TRANSFORMDATA SCALEFACTOR))
