                                                    (CAR PARABOUNDS)))
                                   (SETQ PARAEND (\TEDIT.FIND.PROTECTED.END TEXTOBJ
                                                        (fetch (LINEDESCRIPTOR CHAR1)
                                                           of LINE)
                                                        (CDR PARABOUNDS]
                               (RPLACA L1 LINE)
                               (RPLACA LN LINE)
                               (bind (LL _ LINE)
                                  while (AND [COND
                                                    ((fetch (TEXTOBJ FORMATTEDP) of TEXTOBJ)
                                                     (ILESSP (fetch (LINEDESCRIPTOR CHARLIM)
                                                                of LL)
                                                            PARAEND))
                                                    (T (NOT (fetch (LINEDESCRIPTOR CR\END)
                                                               of LL]
