(UnixShellQuote
  [LAMBDA (STRING)
    (DECLARE (LOCALVARS . T))                                (* ; "Edited  5-Feb-2026 18:37 by rmk")
                                                             (* ; "Edited 18-Jan-2026 08:34 by rmk")
                                                             (* ; "Edited 19-Apr-89 21:14 by TAL")
    (LET* ((X (CHCON STRING))
           (CT X)
           C FLG)
          [while (LISTP CT) do (SETQ C (CAR CT))
                               (COND
                                  ([OR (<= (CHARCODE a)
                                           C
                                           (CHARCODE z))
                                       (<= (CHARCODE A)
                                           C
                                           (CHARCODE Z))
                                       (<= (CHARCODE 0)
                                           C
                                           (CHARCODE 9))
                                       (FMEMB C (CHARCODE (- /]
                                   (SETQ CT (CDR CT)))
                                  (T (SETQ FLG T)
                                     (RPLNODE CT (CHARCODE \)
                                            (CONS (COND
                                                     ((FMEMB C (CHARCODE (CR LF)))
                                                      (CHARCODE SPACE))
                                                     (T C))
                                                  (SETQ CT (CDR CT]
          (MTOSYSSTRING (CL:IF FLG
                            (CONCATCODES X)
                            STRING)])

