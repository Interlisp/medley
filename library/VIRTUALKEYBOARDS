            UNLESS (ASSOC TR KEYLABELS) DO (PUSH KEYLABELS (LIST TR (CADR K))))

         (SETQ CHARLABELS (FETCH (KEYBOARDCONFIGURATION CHARLABELS) OF CONFIG))

         (SETQ BM (VKBD.CREATE-KEYBOARD-BITMAP CONFIG))

