        ((BEFORELOGOUT BEFOREMAKESYS BEFORESYSOUT BEFORESAVEVM) 

             (SETQ \\VKBD.KEYBOARD.BEFORETYPE (KEYBOARDTYPE)))

        ((AFTERLOGOUT AFTERMAKESYS AFTERSYSOUT AFTERSAVEVM) 

