                   (CL:WHEN (FETCH COMPLETEKEYASSIGNMENTS OF KEYBOARD)

                       (PUTASSOC KEYNUM (CDR (VKBD.PARSE-KEY-ASSIGNMENT (CONS KEYNUM ACTIONS)

                                                    CURRENTKEYBOARDCONFIG))

                              (FETCH COMPLETEKEYASSIGNMENTS OF KEYBOARD)))

