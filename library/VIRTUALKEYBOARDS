                                                                     |of| REGION))
                                                            (ADD1 (|fetch| (REGION BOTTOM)
                                                                     |of| REGION))
                                                            (IDIFFERENCE (|fetch| (REGION WIDTH)
                                                                            |of| REGION)
                                                                   2)
                                                            (IDIFFERENCE (|fetch| (REGION HEIGHT)
                                                                            |of| REGION)
                                                                   2)
                                                            'TEXTURE
                                                            'REPLACE WHITESHADE))))

