(vkbd.remove-keyboard-command
  (lambda nil                                            (* \; "Edited 15-Dec-87 16:49 by Snow")

    (prog (k)
          (setq k (vkbd.pop-up-keyboards-menu "Select keyboard to be removed ."))
          (|if| k
