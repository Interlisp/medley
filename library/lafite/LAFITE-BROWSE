                                     (push LAYOUTS LAYOUT)
                                     (CL:FORMAT T "Browser for ~A noted.~%%" (fetch (MAILFOLDER
                                                                                         
                                                                                      SHORTFOLDERNAME
                                                                                         )
                                                                                of MAILFOLDER))
                                     (add N 1)))
                   (while (OR (NULL LAYOUTS)
                                  (MENU (create MENU
                                               ITEMS _ '(("Specify another browser" T)
                                                         ("Finish" 'NIL))
