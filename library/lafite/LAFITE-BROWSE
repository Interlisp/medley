(BUILD.LAFITE.LAYOUTS
  [LAMBDA NIL                                            (* ; "Edited 23-Nov-87 16:48 by bvm:")
    (LET (DUMMYWINDOWS)
         (CL:UNWIND-PROTECT
             (PROG ((ICONBM (fetch (TITLEDICON ICON) of LAFITE.FOLDER.ICON))
                    (N 0)
                    W MAILFOLDER LAYOUTS LAYOUT CURRENT OLDLAYOUTS POS)
