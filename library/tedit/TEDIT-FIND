                                (SETQ RESULT1 (TEDIT.FIND TEXTOBJ (CONCATLIST (\TEDIT.PACK.TARGETLIST
                                                                               (CDR TARGETLIST)))
                                                     TRIALEND# END# T))
                                (AND RESULT1 (CADR RESULT1)))
                               (T                            (* ; "last element of search")
                                  (SUB1 TRIALEND#])

