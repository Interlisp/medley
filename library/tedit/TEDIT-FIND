(TEDIT.NEXT
  [LAMBDA (STREAM)                                           (* ; "Edited 30-May-91 20:57 by jds")
    (PROG ((TEXTOBJ (TEXTOBJ STREAM))
           TARGET SEL OPTION FIELDSEL)
          (SETQ SEL (fetch (TEXTOBJ SEL) of TEXTOBJ))
