    (LET [(W (CAR (fetch (TEXTOBJ \WINDOW) of (TEXTOBJ TSTREAM]
         (SELECTQ [MENU (create MENU
                               ITEMS _ '(("Print to a file" 'FILE 
                                              "Puts image on a file; prompts for filename and format"
                                                )
                                         ("Send to a printer" 'PRINTER 
