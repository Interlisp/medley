                                                             (* ; "Edited 30-May-91 23:02 by jds")
    (if (AND (FIXP PREVCH)
             (FIXP CH))
        then (LET [(READSA (fetch READSA of (OR (fetch (TEXTOBJ TXTWTBL) of TEXTOBJ)
                                                TEDIT.WORDBOUND.READTABLE]
                  (NEQ (\SYNCODE READSA PREVCH)
                       (\SYNCODE READSA CH)))
      else T])
