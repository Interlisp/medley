         (PIECE 4 POINTER)
         (PIECE 6 POINTER)
         (PIECE 8 POINTER)
         (PIECE 10 FULLXPOINTER)
         (PIECE 12 POINTER)
         (PIECE 14 POINTER)
         (PIECE 14 (FLAGBITS . 0))
         (PIECE 16 POINTER)
         (PIECE 16 (FLAGBITS . 0))
         (PIECE 16 (FLAGBITS . 16))
         (PIECE 16 (FLAGBITS . 32))
