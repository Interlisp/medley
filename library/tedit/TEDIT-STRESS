    (CL:UNLESS PROBESPERFILE (SETQ PROBESPERFILE 100))
    (PRINTOUT T REPS " reps of " (LENGTH FILES)
           " files with " PROBESPERFILE " probes per file" T)
    (for R (N _ 0) from 1 to REPS
       do (PRINTOUT T R " ")
          (for F TS inside FILES
