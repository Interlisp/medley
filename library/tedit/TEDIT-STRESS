                                    (CL:WHEN (AND CHECKEQUIV (NOT (EQTEXTSTREAM TS TSP STOP)))
                                           (HELP "Get of put not equivalent" F))
                                    (CLOSEF TSP))
                      else (SETQ TS (OPENTEXTSTREAM F))
                           (TEDIT.PUT TS "{CORE}FOO.TEDIT;1")
