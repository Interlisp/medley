(\SHOWCIRCULARLIST  [LAMBDA (LST PATH DEPTH)                                   (* bvm%: " 6-Dec-83 16:53")    (DECLARE (USEDFREE OBJECT))    (COND       ((NLISTP LST)        (\SHOWCIRCULARITY1 LST PATH))       ((EQ LST OBJECT)        (\SHOWCIRCULARITY PATH))       ((NEQ DEPTH 0)        (\SHOWCIRCULARLIST (CAR LST)               PATH               (SUB1 DEPTH))        (\SHOWCIRCULARLIST (CDR LST)               PATH               (SUB1 DEPTH])

