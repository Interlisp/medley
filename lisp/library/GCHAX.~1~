    (PROG ((I 0)
           ENTRY LINK OVENTRY CNT)
      LP  (SETQ ENTRY (\ADDBASE \HTMAIN (LLSH I 1)))
          [COND
             ((fetch (GC EMPTY) of ENTRY))
