    (SHIFT.UP (INTERACT&SHIFT.BITMAP.UP PREVIOUS.BITMAP))                (INTERCHANGE.BLACK/WHITE                      (INVERT.BITMAP.B/W PREVIOUS.BITMAP))                (ADD.BORDER (INTERACT&ADD.BORDER.TO.BITMAP PREVIOUS.BITMAP))                (RETURN NIL)))           (REPLACE (BITMAPOBJ BITMAP) OF OBJ WITH NEW.BITMAP)           (IMAGEOBJPROP IMAGEOBJ 'CACHED.BITMAP NIL)        (* ;                              "And clear any cached shrunk bitmaps so the display looks reasonable.")           (RETURN 'CHANGED])

