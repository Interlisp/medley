(\PNC  (LAMBDA (CH STR)                                           (* jds " 7-JUN-82 14:03")    (PROG ((LEN (fetch (STRINGP LENGTH) of STR))           (OFFST (fetch (STRINGP OFFST) of STR)))          (COND             ((ZEROP LEN)              (ERROR "NO ROOM LEFT IN STRING TO PUT CHARACTER"))             (T (UNINTERRUPTABLY                    (\PUTBASEBYTE (fetch (STRINGP BASE) of STR)                           OFFST CH)                    (replace (STRINGP OFFST) of STR with (ADD1 OFFST))                    (replace (STRINGP LENGTH) of STR with (SUB1 LEN))))))))

