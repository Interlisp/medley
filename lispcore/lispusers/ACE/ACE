    [ACE.QUICKDRAW&UPD (LIST (CAR (NTH ACE.CURRENT.SEQUENCE START]
    (until (KEYDOWNP 'SPACE) do (ACE.RUN (SUBLIST ACE.CURRENT.SEQUENCE START END)
                                               ACE.SEQ.WINDOW ACE.SEQ.WINDOW.XOFF ACE.SEQ.WINDOW.YOFF
                                               ])

