             (LINELENGTH (IQUOTIENT WIDTH (CHARWIDTH (CHARCODE SPACE)
                                                 TSTREAM))
                    TSTREAM))
         (SELECTQ (CAR DEF)
             (DEFINEQ (SETQ DEF (CADR DEF))
                      (PRINTOUT TSTREAM .FONT BOLDFONT .P2 NAME T .FONT DEFAULTFONT 2)
