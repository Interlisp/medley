                                  'ted)                                                   nil directories)                                            (findfile (packfilename 'name utility-name 'extension                                                             'txt)                                                   nil directories)                                            (findfile (packfilename 'name utility-name 'extension                                                             'doc)                                                   nil directories))))           (|if| (eq print-server t)               |then| (let ((doc-file (find-doc-source-file)))                           (|if| doc-file                               |then| (tedit doc-file)                             |else| "No doc file found"))             |elseif| print-server               |then| (let ((doc-file (or (findfile (packfilename 'name utility-name 'extension                                                           (selectq (printertype print-server)                                                               ((press fullpress)                                                                     'press)                                                               (interpress 'ip)                                                               (help "Unknown printer type!")))                                                 nil directories)                                          (find-doc-source-file))))                           (|if| doc-file                               |then| (add.process `(empress ',doc-file nil ',print-server))                                     (concat "Printing file " doc-file " on printer " print-server)                             |else| "No doc file found"))             |else| "No printer specified")))))(* |;;| "Just what is says")(defineq(|\\Pick-One-At-Random|  (lambda (|list|)                                           (* 