    (FOR GF MF DEST INSIDE GFILES COLLECT (SETQ GF (OR (FINDFILE GF NIL (GITSUBDIRS))
                                                       (ERROR "FILE NOT FOUND" GF)))
                                        (SETQ MF (MFILE4GFILE GF))
                                        (PRIN3 (IF (SETQ DEST (COPYFILE GF MF))
                                                   THEN (CONCAT "Copied to " DEST)
                                                        DEST
                                                 ELSE (FLASHWINDOW T)
