(JSON-AVPAIR
  [LAMBDA (STR)                                              (* ; "Edited 30-Apr-2024 13:31 by rmk")
    (LET (A V)
         (JSON-SKIP STR)
         (SETQ A (MKATOM (JSON-STRING STR)))
         (CL:UNLESS (EQ (CHARCODE %:)
                        (JSON-SKIP STR))
