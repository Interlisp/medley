(ARGLIST
  [LAMBDA (FN)                                               (* rmk%: " 6-AUG-79 22:41")
    (PROG (TEMP (DEF (CGETD FN)))
          (DECLARE (LOCALVARS . T))
          (RETURN (if (OR (SUBRP DEF)
                          (NLISTP DEF)
