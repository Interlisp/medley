                           (IL:* IL:|;;| "comment in COND still must be well formed ...")

                           (IL:* IL:|;;| "((TYPEP FONT 'ARRAY) ;; Assuming that FONT is already the array form of result from GLYPHS-BY-CHARSET (LOOP :FOR I :FROM 0 :TO (1- (ARRAY-DIMENSION FONT 0)) :NCONC (LET ((CS (AREF FONT I))) (WHEN CS (LIST (LIST I CS))))))")

                           )
                      (T (ERROR "Invalid FONT: ~S" FONT))))
        (WHEN (SETQ CSGLYPHS (SECOND (ASSOC CSET GBCS)))
            (LET ((TOTAL-WIDTH 0)
                  (ASCENT 0)
                  (DESCENT 0)
                  (FIRSTCHAR MOST-POSITIVE-FIXNUM)
