           UNLESS (MEMB (FILENAMEFIELD IFILE 'EXTENSION)
                        *COMPILED-EXTENSIONS*)
           DO (SETQ LOC (FINDFNDEF FN IFILE))
              (IF (LISTP LOC)
                  THEN (SETQ TFPROP (LIST FN (CAR LOC)))
                       [SETQ WINDOW (FIND W IN (OPENWINDOWS)
                                       SUCHTHAT (AND (EQUAL TFPROP (WINDOWPROP W 'TF))
