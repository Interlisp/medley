(DEFCOMMAND ts (FILE WINDOW FORMAT) 
   (TEDIT-SEE (OR (FINDFILE-WITH-EXTENSIONS FILE NIL '(NIL TEDIT TED TXT TEXT TEX))
                  (ERROR "FILE NOT FOUND" FILE))
          (OR WINDOW 'SEE-TEDIT)
          FORMAT))

(DEFCOMMAND tf (FN . IFILES) (PF-TEDIT FN IFILES))

