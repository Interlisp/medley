(\ADDOFD
  [LAMBDA (STREAM)                                           (* rmk%: "21-OCT-83 16:32")
          
          (* ;; "Returns the STREAM it adds to \OPENFILES")

    (\CLEAROFD)
    (AND (fetch NAMEDP of STREAM)
         (push \OPENFILES STREAM))
    STREAM])

(\CLEAROFD
  [LAMBDA NIL                                                (* lmm "30-SEP-80 20:08")
                                                             (* ; 
