                                                    `(PROG1 (LISTGET (CDAR %, (CAR ARGS))
                                                                   %,
                                                                   (CADR ARGS))
                                                         (LISTPUT (CDAR %, (CAR ARGS))
                                                                %,
                                                                (CADR ARGS)
                                                                %,
                                                                (CADDR ARGS)))]
                                                   (T `(LISTGET (CDAR %, (CAR ARGS))
                                                              %,
                                                              (CADR ARGS])
)
