COLLECT (SETQ REST (CL:REMOVE (SETQ C (CAAAR FORMS))                                                       FORMS :KEY 'CAAR))                               `(,C (SETQ CODEVAR (CDR CODEVAR))                                    (DISCRIMINATE-1 ,(SUB1 MINCHARS)                                           ,@(FOR F IN (CL:SET-DIFFERENCE FORMS (SETQ FORMS                                                                                          REST))                                                COLLECT (CONS (CDAR F)                                                                  (CDR F]      (DISCRIMINATE-2 (MINCHARS MATCHLST)             (* ;; "True if codes match MATCHLST, with prefix at least MINCHARS long.")             (IF (NULL MATCHLST)                 THEN `(NULL CODEVAR)               ELSE (LET [(CODE `(AND (EQ (CAR CODEVAR)                                              ,(POP MATCHLST))                                          (PROGN (SETQ CODEVAR (CDR CODEVAR))                                                 (DISCRIMINATE-2 ,(SUB1 MINCHARS)                                                        ,MATCHLST]                             (IF (<= MINCHARS 0)                                 THEN                    (* ; "Ok to match null")                                       `(OR (NULL CODEVAR)                                            ,CODE)                               ELSE                      (* ; "Must match exactly so far")                                     CODE]     (LET ((CODEVAR MONTH))                                  (* ;                "This LET is solely to allow more compact code (PVAR_ is one byte less than IVARX_)")          (DISCRIMINATE '(("JANUARY" 1)                          ("FEBRUARY" 2)                          ("MARCH" 3)                          ("APRIL" 4)                          ("MAY" 5)                          ("JUNE" 6)                    