(\BN.D2TH  [LAMBDA (U)                                            (* lmm " 9-Jan-86 15:31")    (PROG (B S V BI M AI)          (COND             ((NULL U)              (RETURN B)))          [COND             [(OR (EQ (CAR U)                      '+)                  (EQ (CAR U)                      '-))              (PROGN (SETQ S (CAR U))                     (SETQ U (CDR U]             (T (SETQ S '+]          (COND             ((NULL U)              (RETURN B)))          (SETQ U (SETQ V (REVERSE U)))      L2  (SETQ BI 0)          (SETQ M 1)          [while (AND U (ILESSP M \BIGNUM.THETA)) do (PROGN (SETQ AI (CAR U))                                                                    (SETQ U (CDR U))                                                                    (SETQ BI (IPLUS (ITIMES AI M)                                                                                    BI))                                                                    (SETQ M (ITIMES 10 M]          [COND             ((EQ S '-)              (SETQ BI (IMINUS BI]          (SETQ B (CONS BI B))          (COND             (U (GO L2)))          (RETURN B])

