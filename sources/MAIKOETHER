             (PACKET (\\HANDLE.RAW.PACKET PACKET)
                    (COND
                       ((ILESSP (|add| CNTR 1)
                               \\MAXWATCHERGETS)
                        (GO LP)))))
          (BLOCK)
          (SETQ CNTR 0)
          (GO LP))))

